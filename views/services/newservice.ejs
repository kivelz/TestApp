<% layout('./layouts/boilerplate') -%>


<div class="container">
        <div id="newservice">
            <div class="card card-body">
                <div class="newServiceHeader">
                        <h1 class="text-left">Add New Service </h1>
                </div>
                <form action="/services" id="postEditForm"method="POST" enctype="multipart/form-data" id="address" autocomplete="off">
                    <div class="form-group">
                    <div class="card-body border border-dark rounded">
                        <label for="name">Name : </label>
                        <input id="name" class="form-control" type="text" name="services[name]" placeholder="Shop name"
                            autocomplete="off">
                    </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="card-body border border-dark rounded">
                                <label for="image">Image upload: ( 800 x 600 px only ) maximum of 10 images</label>
                                <p><input type="file" id="image" name="images" accept="image/*" multiple required/></p> 
                             </div>
                        </div>
                      
                     <div class="form-group">
                         <div class="card-body  border border-dark rounded">
                                <label for="work">Your webpage : </label>
                                <input type="text" id="url" name="services[url]" class="form-control" placeholder="https://www.example.com"/>
                                <div class="row">
                                        <div class="col-md-12">
                                            <label class="pt-3" for="floor">Unit no : </label>
                                           <p># <input type="text" class="rounded" id="floorNo" name="services[floorNo]" style="width: 50px"> 
                                                <input type="text" class="rounded" id="unit" name="services[unit]"  style="display: inline-block;width: 70px"/>  
                                            </p> 
                                        </div>
                                    </div> 
                                 </div>
                            </div>

                    <div class="form-group">
                        <div class="card-body  border border-dark rounded">
                                <label for="email">Business Email: </label>
                                <input type="email"  class="rounded" id="email" name="services[email]" required/>
                                 <label for="tel">Contact No: </label>
                                 <input type="text" class="rounded" id="tel" name="services[tel]"  required/>
                            </div>
                        </div>
                       
                            
                  
                    <div class="form-group">
                        <div class="card-body  border border-dark rounded">
                                <label for="tags">Categories : </label>
                                <input type="text" class="form-control" id="tags" name="tags" value="Bording,Sitting,Walking,Spa,Adpotion,Shop,Grooming,Clinic,Taxi,Cafe" />
                            </div>
                        </div>
                       
                    <div class="form-group locationField">
                        <div class="card-body border border-dark rounded">
                                <label for="location">Street Name : </label>
                                <input class="form-control" type="text" id="autocomplete" name="services[location]" onFocus="geolocate()"
                                    placeholder="17 venus Rd" />
                                    <div class="row">
                                            <div class="col-md-6">
                                                <label for="location">Country : </label>
                                                <input class="form-control" type="text" id="country" name="services[country]" placeholder="Singapore"
                                                    style="pointer-events:none;" />
                                            </div>
                                            <div class="col-md-6">
                                                <label for="location">Postal code : </label>
                                                <input class="form-control" type="text" id="postal_code" name="services[postcode]"
                                                     />
                                            </div>
                                        </div>
                                    </div>
                            </div>
                            
                       
                    <div class="form-group">
                        <label for="description">Decribe the details of your listing : </label>
                        <textarea name="services[description]" id="summernotes" placeholder="Enter Description of your shop"
                            cols="60" rows="20"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                  <div class="float-right" id="maxContentPost"></div>
                <a href="/services">Go Back</a>
            </div>
        </div>



<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDFyDIbQHlD0ksFZ9iZDmifDDUHF9TDPrE&libraries=places&callback=initAutocomplete"async defer></script>
